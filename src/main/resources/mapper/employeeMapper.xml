    <select id="findAll" resultType="cdu.zjy.model.Employee">
        select e.id,e.name,e.number,e.gender from employee e
    </select>

    <select id="findByNumber" resultType="cdu.zjy.model.Employee">
        select * from employee where number = #{number}
    </select>

    <insert id="add" parameterType="cdu.zjy.model.Employee">
        insert into employee(number,name,gender,age) values (#{number},#{name},#{gender},#{age})
    </insert>

    <update id="mod" parameterType="cdu.zjy.model.Employee">
        update employee set name=#{name},gender=#{gender},age=#{age} where number=#{number}
    </update>

    <delete id="del" parameterType="int">
        delete from employee where number=#{number}
    </delete>
</mapper>
